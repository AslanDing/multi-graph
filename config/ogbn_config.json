{
    "name": "ogbn",
    "n_gpu": 1,

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0.0001,
            "amsgrad": true
        }
    },

    "trainer": {
        "epochs": 100,
        "save_dir": "../exp/ogbn-mag",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_acc",
        "early_stop": 100,
        "tensorboard": true
    }
}
